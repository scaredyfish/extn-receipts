{
    "manifest_version": 3,
    "name": "Screenshot Extension",
    "version": "1.0",
    "description": "Capture a screenshot of a selected area in the current tab",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_icon": {
        "16": "icons/cut16.png",
        "64": "icons/cut64.png",
        "128": "icons/cut128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/cut16.png",
      "64": "icons/cut64.png",
      "128": "icons/cut128.png"
    }
  }